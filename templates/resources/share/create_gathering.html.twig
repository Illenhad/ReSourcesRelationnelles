{% extends 'base.html.twig' %}

{% block title 'Partager une resource' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/form.css') }}" type="text/css">
{% endblock %}

{% block body %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger mt-4 text-center">
            {{ message }}
        </div>
    {% endfor %}
    <div class="charte-form">
        <h2>Partager une ressource</h2>
        <hr>
        {{ form_start(form) }}
        <div>
            {{ form_label(form.gathering_id) }}
            {{ form_widget(form.gathering_id) }}
        </div>
        <div class="form-action form-action-centred">
            <button class="btn btn-green">Partager</button>
            <a href="{{ path('comment.show', {id: resource.id, slug: resource.slug}) }}" class="btn btn-red">Annuler</a>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}