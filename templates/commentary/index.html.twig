<h1>Commentary index</h1>

<table class="table">
    <thead>
    <tr>
        <th>Pseudo</th>
        <th>Content</th>
        <th>CommentDate</th>
        <th>actions</th>
    </tr>
    </thead>
    <tbody>
    {% for commentary in commentaries %}
        <tr>
            <td>{{ commentary.user }}</td>
            <td>{{ commentary.content }}</td>
            <td>{{ commentary.commentDate ? commentary.commentDate|date('Y-m-d H:i:s') : '' }}</td>
            <td>
                <a href="{{ path('commentary_edit', {'id': commentary.id}) }}">edit</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{{ render(url('commentary_new', { 'resource':resource.id })) }}