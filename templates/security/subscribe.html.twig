{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div id="formulaire">
    <h1>  Inscrivez vous!  </h1>

    {{  form_start(form) }}
    {{ form_row(form.lastname,{
        'attr':{'placeholder':'Nom de famille...' },
        'label':'Nom'
    }) }}
    {{ form_row(form.firstname,{
        'attr':{'placeholder':'Prenom...' },
        'label':'Prenom'
    }) }}
    {{ form_row(form.username,{
        'attr':{'placeholder':'Pseudo...' },
        'label':'Pseudo'
    }) }}
    {{ form_row(form.email,{
        'attr':{'placeholder':'Adresse mail...' },
        'label':'Adresse mail'
    }) }}
    {{ form_row(form.password,{
        'attr':{'placeholder':'Mot de passe...' },
        'label':'Mot de passe'
    }) }}
    {{ form_row(form.confirm_password,{
        'attr':{'placeholder':'Comfirmer votre mot de passe!' },
        'label':'Comfirmation du mot de passe'
    }) }}
    {{ form_row(form.department,{
        'attr':{'placeholder':'Departement' },
        'label':'Departement'
    }) }}

    <button class="btn btn-primary"> S'inscrire! </button>
    {{  form_end(form) }}
    </div>
{% endblock %}
